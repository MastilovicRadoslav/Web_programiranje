
@using WebShopApplication.Models
<style>
    body {
        background-color: cadetblue;
    }

    div {
        display: block;
        font-size: 150%;
        text-align: left;
    }

    label {
        color: cornsilk
    }

    a {
        font-family: fantasy;
        font-size: 160%;
        color: cadetblue;
        background-color: white;
    }

    .error {
        font-size: 150%;
        color: red;
        margin-left: auto;
        margin-right: auto;
    }

    table {
        background-color: bisque;
        font-family: fantasy;
        font-size: 30px;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
    }

    td {
        padding: 0.7rem;
        border: 2px solid;
        border-color: black;
    }

    input {
        font-size: 22px;
    }

    .title {
        width: 10px;
        margin-left: auto;
        margin-right: auto;
        color: black;
        font-family: fantasy;
    }

    .options {
        font-size: 27px
    }
</style>

<h1 class="options">Options:</h1>
<a href="~/Admin/ReviewProfile">Review Profile</a>
<br />
<a href="~/Admin/SellersCustomers">Review Sellers/Customers</a>
<br />
<a href="~/Admin/ReviewProducts">Review Products</a>
<br />
<a href="~/Admin/ReviewOrders">Review Orders</a>
<br />
<a href="~/Admin/Register">Register Seller</a>
<br />
<a href="~/Admin/Reviews">See Reviews</a>
<br />
<a href="~/Login/LogOut">Log Out</a>
<br />


<h1 class="title">Modify Product</h1>
<p class="error">@TempData["Msg"]</p>
<hr />

<div>


    <form method="post" action="~/Admin/TryModifyProduct" enctype="multipart/form-data">

        <table>
            <tr>
                <td>
                    <input type="hidden" name="IDOfProduct" value="@ViewBag.IDOfProduct" />
                    Name  <input type="text" name="name" />
                </td>
            </tr>
            <tr>
                <td>
                    Price <input type="number" name="price" min="0" />
                </td>
            </tr>
            <tr>
                <td>
                    Amount <input type="number" name="amount" min="0" />
                </td>
            </tr>
            <tr>
                <td>
                    Description <input type="text" name="description" />
                </td>
            </tr>
            <tr>
                <td>
                    Image <input type="file" name="image" />
                </td>
            </tr>
            <tr>
                <td>
                    City <input type="text" name="city" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Modify" />
                </td>
            </tr>
        </table>
    </form>
</div>

