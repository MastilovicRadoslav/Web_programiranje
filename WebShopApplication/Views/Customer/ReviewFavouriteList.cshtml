@using WebShopApplication.Models
@using WebShopApplication.Controllers
<style>
    body {
        background-color: cadetblue;
    }

    div {
        display: block;
        font-size: 150%;
        text-align: left;
    }

    label {
        color: cornsilk
    }

    a {
        font-family: fantasy;
        font-size: 160%;
        color: cadetblue;
        background-color: white;
    }

    .error {
        font-size: 150%;
        color: red;
        margin-left: auto;
        margin-right: auto;
    }

    table {
        background-color: bisque;
        font-family: fantasy;
        font-size: 30px;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
    }

    td {
        padding: 0.7rem;
        border: 2px solid;
        border-color: black;
    }

    input {
        font-size: 22px;
    }

    .title {
        width: 10px;
        margin-left: auto;
        margin-right: auto;
        color: black;
        font-family: fantasy;
    }

    .options {
        font-size: 27px
    }
</style>


<h1 class="options">Options:</h1>
<a href="~/Customer/ReviewProfile">Review Profile</a>
<br />
<a href="~/Customer/ReviewOrders">Review Orders</a>
<br />
<a href="~/Customer/ReviewFavouriteList">Review Favourite Products</a>
<br />
<a href="~/Unlogged/ReviewProducts">Review Products</a>
<br />
<a href="~/Customer/Reviews">See Reviews</a>
<br />
<a href="~/Login/LogOut">Log Out</a>
<br />

<h1 class="title">ReviewProducts</h1>

<div>

    <table>

        <tr>

            <td>ID</td>
            <td>Name</td>
            <td>Price</td>
            <td>Amount</td>
            <td>Description</td>
            <td>Image</td>
            <td>DateTime published</td>
            <td>City</td>
            <td>Status</td>
            <td>Options</td>

        </tr>

        @foreach (Product p in (List<Product>)HttpContext.Current.Application["products"])
        {
            foreach (string productID in ((User)Session["Login"]).Favorite_products)
            {
                if (p.ID == productID && p.Deleted == false)
                {
                    <tr>
                        <td>@p.ID</td>
                        <td>@p.Name</td>
                        <td>@p.Price</td>
                        <td>@p.Amount</td>
                        <td>@p.Description</td>
                        <td><img src="@SellerController.ConvertBytesToImage(p.Image)" width="150" height="150" /></td>
                        <td>@p.Date_product</td>
                        <td>@p.City</td>
                        @if (p.Status == true)

                        {
                            <td>In stock</td>
                        }
                        else
                        {
                            <td>Out of stock</td>
                        }
                    </tr>
                }
            }
        }
    </table>
</div>
